<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flrjcx.xypt.mapper.ManagerLoginMapper">
    <resultMap id="managerModel" type="com.flrjcx.xypt.common.model.param.common.ManagerVo">
        <id property="managerId" column="managerId"/>
        <result property="nickName" column=""/>
        <result property="nickPic" column=""/>
        <result property="managerAccount" column=""/>
        <result property="managerPassword" column=""/>
    </resultMap>

    <sql id="allManagerInfo">
        manager_id,
        nick_name,
        nick_pic,
        manager_account,
        manager_password,
    </sql>

    <sql id="allUserInfo">
        user_id,
        nick_name,
        nick_pic,
        content,
        sex,
        birthday,
        phone,
        email,
        account,
        password,
        balance,
        fans_num,
        focus_num,
        address,
        school,
        create_time,
        update_time,
        status
    </sql>

    <select id="getUserList" resultType="com.flrjcx.xypt.common.model.param.common.UserVo">
        select
            <include refid="allUserInfo"></include>
        from
            users
    </select>

    <select id="findManagerByAccount" resultType="com.flrjcx.xypt.common.model.param.common.ManagerVo">
        select
            <include refid="allManagerInfo"></include>
        from
            manager
        where
            manger_account = #{account}
        limit 1
    </select>
</mapper>
