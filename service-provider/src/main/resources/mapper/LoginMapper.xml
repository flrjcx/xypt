<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flrjcx.xypt.mapper.LoginMapper">
    <resultMap id="userModel" type="com.flrjcx.xypt.common.model.param.common.UserVo">
        <id property="userId" column="userId"/>
        <result property="nickName" column=""/>
        <result property="nickPic" column=""/>
        <result property="content" column=""/>
        <result property="sex" column=""/>
        <result property="birthday" column=""/>
        <result property="phone" column=""/>
        <result property="email" column=""/>
        <result property="account" column=""/>
        <result property="password" column=""/>
        <result property="balance" column=""/>
        <result property="fansNum" column=""/>
        <result property="focusNum" column=""/>
        <result property="address" column=""/>
        <result property="school" column=""/>
        <result property="createTime" column=""/>
        <result property="updateTime" column=""/>
        <result property="status" column=""/>
    </resultMap>
    <select id="testUserList" resultType="com.flrjcx.xypt.common.model.param.common.UserVo">
        select
            <include refid="allInfo"></include>
        from
            users
    </select>

    <sql id="allInfo">
        user_id,
        nick_name,
        nick_pic,
        content,
        sex,
        birthday,
        phone,
        email,
        account,
        password,
        balance,
        fans_num,
        focus_num,
        address,
        school,
        create_time,
        update_time,
        status
    </sql>

    <select id="findUserByPhone" resultType="com.flrjcx.xypt.common.model.param.common.UserVo">
        select
            <include refid="allInfo"></include>
        from
            users
        where
            phone = #{phone} and status = 1
        limit
            1
    </select>
    <select id="findUserByEmail" resultType="com.flrjcx.xypt.common.model.param.common.UserVo">
        select
            <include refid="allInfo"></include>
        from
            users
        where
            email = #{email} and status = 1
        limit
            1
    </select>

    <select id="findUserByAccount" resultType="com.flrjcx.xypt.common.model.param.common.UserVo">
        select
            <include refid="allInfo"></include>
        from
            users
        where
            account = #{account} and status = 1
        limit
            1
    </select>
</mapper>
